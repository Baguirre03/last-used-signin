{
  "manifest_version": 3,
  "name": "Last Used Login",
  "version": "1.0",
  "description": "Remembers your last used signin option for each website to help you choose the same one next time.",
  "permissions": ["storage", "activeTab"],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "public/enter.png",
    "32": "public/enter.png",
    "48": "public/enter.png",
    "128": "public/enter.png"
  },
  "action": {
    "default_title": "Last Used Login Helper",
    "default_icon": {
      "16": "public/enter.png",
      "32": "public/enter.png",
      "48": "public/enter.png"
    }
  }
}
